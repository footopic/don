= form_for @user, html: { class: 'form-horizontal' } do |f|
  - if @user.errors.any?
    #error_explanation
      h2
        = pluralize(@user.errors.count, "error")
        |  prohibited this user from being saved:
      ul
        - @user.errors.full_messages.each do |message|
          li
            = message
  .form-group
    = f.label 'image'
    .row
      .col-sm-6
        .img-wrap
          = image_tag current_user.image.url, id: 'img-user-icon', class: 'img-circle', size: '128x128'
        = f.file_field :image, class: 'form-control'
  .form-group
    = f.label 'screen_name'
    .row
      .col-sm-6
        = f.text_field :screen_name, class: 'form-control'
  .form-group
    = f.label 'name'
    .row
      .col-sm-6
        = f.text_field :name, class: 'form-control'
  .form-group
    .col-xs-3.pull-right
      = f.submit class: 'form-control'
