<div class="user-header">
  <div class="row">
    <div class="col-xs-8">
      <div class="tumbnail">
        <%= image_tag @user.image_url %>
      </div>
      <div class="infos">
        <h2 class="title">
          <%= link_to @user.screen_name, @user %>
        </h2>

        <p class="name">
          <%= @user.name %>
        </p>
      </div>
    </div>
    <div class="col-xs-4 pull-right">
      <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-default' %>
    </div>
  </div>

</div>

<%= render @articles %>

<%= paginate @articles %>
