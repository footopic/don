<div class="container-fluid article-header">
  <div class="article-titles">
    <p id="categories-preview"><%= @article.categories_text %></p>

    <h1 calass="title">
      <%= @article.main_title %>
      <% if current_user.is_owner(@article) %>
          <%= link_to edit_article_path(@article) do
            fa_icon 'pencil'
          end %>
      <% end %>
    </h1>

    <div class="record pull-left">
      TODO
    </div>
  </div>
  <div class="article-subinfos">
    <p>
      <strong>User:</strong>
      <%= @article.user_id %>
    </p>
  </div>
</div>

<div class="container-fluid article-text">
  <div id="text-preview" class="markdown-body"></div>
</div>

<div id="text-raw" class="hide">
  <%= @article.text %>
</div>

<hr>

<h3>コメント</h3>
<div class="col-md-6">
  <% @comments.each do |comment| %>
      <div class="media">
        <div class="media-left">
          <%= image_tag 'noimg.png', class: 'media-object', size: '64x64' %>
        </div>

        <div class="media-body">
          <h4 class="media-haading">
            <%= comment.user.id %>
          </h4>
          <%= comment.text %>
        </div>
      </div>
  <% end %>

  <hr>

  <%= render 'comments/form' %>
</div>
