<li class="article-item-box">
  <div class="article-icon">
    <%= image_tag article.user.image_url, class: 'img-circle', size: '64x64' %>
  </div>
  <div class="info">
    <div class="info-head">
      <div class="created">
        <span class="author">
          <%= link_to article.user.screen_name, user_path(id: article.user.id) %>
        </span>
        が
        <span class="date">
          <%= I18n.l(article.updated_at) %>
        </span>
        に
        <span>
          <% if article.only_created? %>
              投稿
          <% else %>
              編集
          <% end %>
        </span>
      </div>
    </div>

    <div class="info-title">
      <h2 class="title">
        <%= link_to article.title, article %>
      </h2>
    </div>

    <div class="info-footer">
      <div class="tags">
        <%= link_tags_list_for(article.tags) %>
      </div>
    </div>
  </div>
</li>
