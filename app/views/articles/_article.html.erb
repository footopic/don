<li class="article panel panel-default">
  <div class="panel-body">
    <div class="tumbnail">
      <%= image_tag article.user.image_url %>
    </div>
    <div class="infos">
      <p class="categories">
        <%= article.categories_text %>
      </p>

      <h2 class="title">
        <%= link_to article.main_title, article %>
        <%= link_to edit_article_path(article) do %>
            <%= fa_icon 'pencil' %>
        <% end %>
      </h2>

      <div class="info-footer">
        <div class="record pull-left">
          <% article.tags.each do |tag| %>
              <%= link_to "##{tag.name}", articles_path(tag: tag.name) %>
          <% end %>
        </div>
        <div class="record pull-right">
          <div class="author">
            Updated&nbsp;by
            <%= link_to article.user.screen_name, user_path(id: article.user.id) %>
          </div>
          <div class="date">
            <%= article.to_date_str %>
          </div>
        </div>
      </div>
    </div>
  </div>
</li>